{
  "version": 8,
  "name": "Moscow Light Theory",
  "sources": {
    "moscow": {
      "type": "vector",
      "tiles": ["https://map.emiia.keenetic.pro/tiles/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "glyphs": "https://map.emiia.keenetic.pro/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {"background-color": "#f8f9fa"}
    },
    {
      "id": "landcover",
      "source": "moscow",
      "source-layer": "landcover",
      "type": "fill",
      "filter": ["in", "class", "wood", "grass"],
      "paint": {
        "fill-color": [
          "match", 
          ["get", "class"], 
          "wood", "#e0e3e0",  // Лес - средний серый
          "grass", "#f0f2f0", // Газон - почти белый
          "#f5f5f5"
        ],
        "fill-opacity": 0.6
      }
    },
    {
      "id": "water",
      "source": "moscow",
      "source-layer": "water",
      "type": "fill",
      "paint": {
        "fill-color": "#dde1e4",  // Вода - холодный серый
        "fill-opacity": 0.7
      }
    },
    {
      "id": "roads-minor",
      "source": "moscow",
      "source-layer": "transportation",
      "type": "line",
      "minzoom": 12,
      "filter": ["!=", "class", "motorway"],
      "paint": {
        "line-color": "#edeeef",  // Мелкие дороги - светлый серый
        "line-width": ["interpolate", ["linear"], ["zoom"], 12, 1, 14, 3]
      }
    },
    {
      "id": "roads-major",
      "source": "moscow",
      "source-layer": "transportation",
      "type": "line",
      "minzoom": 10,
      "filter": ["in", "class", "motorway", "primary", "secondary"],
      "paint": {
        "line-color": [
          "match",
          ["get", "class"],
          "motorway", "#b8bdc2",  // Магистрали - темнее
          "primary", "#c8ccd0",   // Основные
          "secondary", "#d5d8db", // Вторичные
          "#e0e0e0"
        ],
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 2, 14, 8]
      }
    },
    {
      "id": "pedestrian-paths",
      "source": "moscow",
      "source-layer": "transportation",
      "type": "line",
      "minzoom": 13,
      "filter": ["==", "class", "path"],
      "paint": {
        "line-color": "#ffffff",  // Пешеходные пути - белые!
        "line-width": 1,
        "line-opacity": 0.9,
        "line-dasharray": [2, 1]
      }
    },
    {
      "id": "building-3d",
      "source": "moscow",
      "source-layer": "building",
      "type": "fill-extrusion",
      "minzoom": 13,
      "paint": {
        "fill-extrusion-color": "#e8eaed",  // Здания - светло-серые
        "fill-extrusion-height": ["get", "render_height"],
        "fill-extrusion-base": ["get", "render_min_height"],
        "fill-extrusion-opacity": 0.7
      }
    },
    {
      "id": "housenumber",
      "source": "moscow",
      "source-layer": "housenumber",
      "type": "symbol",
      "minzoom": 14,
      "layout": {
        "text-field": ["get", "housenumber"],
        "text-font": ["Open Sans Regular"],
        "text-size": 10,
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#8c9196",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "road-labels",
      "source": "moscow",
      "source-layer": "transportation_name",
      "type": "symbol",
      "minzoom": 10,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 9, 14, 12],
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#7d838a",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-labels",
      "source": "moscow",
      "source-layer": "place",
      "type": "symbol",
      "minzoom": 5,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 10, 10, 16, 14, 24],
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#5d636b",
        "text-halo-color": "#ffffff",
        "text-halo-width": 3
      }
    }
  ]
}
