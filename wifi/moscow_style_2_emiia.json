{
  "version": 8,
  "name": "Moscow Full Offline",
  "sources": {
    "moscow": {
      "type": "vector",
      "tiles": ["https://map.emiia.keenetic.pro/tiles/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "glyphs": "https://map.emiia.keenetic.pro/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {"background-color": "#f8f9fa"}
    },
    {
      "id": "landcover",
      "source": "moscow",
      "source-layer": "landcover",
      "type": "fill",
      "filter": ["in", "class", "wood", "grass"],
      "paint": {
        "fill-color": ["match", ["get", "class"], "wood", "#1a3a1a", "grass", "#2d4a2d", "#2a2a2a"],
        "fill-opacity": 0.7
      }
    },
    {
      "id": "water",
      "source": "moscow",
      "source-layer": "water",
      "type": "fill",
      "paint": {"fill-color": "red"}
    },
    {
      "id": "roads-base",
      "source": "moscow",
      "source-layer": "transportation",
      "type": "line",
      "minzoom": 4,
      "paint": {
        "line-color": "#222222",
        "line-width": ["interpolate", ["linear"], ["zoom"], 4, 0.5, 14, 6]
      }
    },
    {
      "id": "roads-class",
      "source": "moscow",
      "source-layer": "transportation",
      "type": "line",
      "minzoom": 4,
      "paint": {
        "line-color": ["match", ["get", "class"], "motorway", "#ff5555", "primary", "#ffaa00", "secondary", "#ffff55", "#444444"],
        "line-width": ["interpolate", ["linear"], ["zoom"], 4, 0.5, 14, 4]
      }
    },
    
    {
      "id": "housenumber",
      "source": "moscow",
      "source-layer": "housenumber",
      "type": "symbol",
      "minzoom": 14,
      "layout": {
        "text-field": ["get", "housenumber"],
        "text-font": ["Open Sans Regular"],
        "text-size": 10,
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 1
      }
    },
    {
      "id": "road-labels",
      "source": "moscow",
      "source-layer": "transportation_name",
      "type": "symbol",
      "minzoom": 10,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 9, 14, 12],
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#cccccc",
        "text-halo-color": "#1a1a1a",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-labels",
      "source": "moscow",
      "source-layer": "place",
      "type": "symbol",
      "minzoom": 5,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 10, 10, 16, 14, 24],
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 1
      }
    }
  ]
}
