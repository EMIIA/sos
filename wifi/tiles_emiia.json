{
  "version": 8,
  "name": "Moscow Full Offline",
  "sources": {
    "moscow": {
      "type": "vector",
      "tiles": ["https://map.emiia.keenetic.pro/tiles/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "glyphs": "https://map.emiia.keenetic.pro/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {"background-color": "#f8f9fa"}
    },
    {
      "id": "landcover",
      "source": "moscow",
      "source-layer": "landcover",
      "type": "fill",
      "filter": ["in", "class", "wood", "grass"],
      "paint": {
        "fill-color": ["match", ["get", "class"], "wood", "#d8dbd8", "grass", "#e8eae8", "#f0f0f0"],
        "fill-opacity": 0.7
      }
    },
    {
      "id": "water",
      "source": "moscow",
      "source-layer": "water",
      "type": "fill",
      "paint": {"fill-color": "#d0d5d8"}
    },
    {
      "id": "roads-base",
      "source": "moscow",
      "source-layer": "transportation",
      "type": "line",
      "minzoom": 4,
      "paint": {
        "line-color": "#cccccc",
        "line-width": ["interpolate", ["linear"], ["zoom"], 4, 0.5, 14, 6]
      }
    },
    {
      "id": "roads-class",
      "source": "moscow",
      "source-layer": "transportation",
      "type": "line",
      "minzoom": 4,
      "paint": {
        "line-color": ["match", ["get", "class"], "motorway", "#a0a5aa", "primary", "#b0b5ba", "secondary", "#c0c5ca", "#d0d5d8"],
        "line-width": ["interpolate", ["linear"], ["zoom"], 4, 0.5, 14, 4]
      }
    },
    {
      "id": "building-3d",
      "source": "moscow",
      "source-layer": "building",
      "type": "fill-extrusion",
      "minzoom": 13,
      "paint": {
        "fill-extrusion-color": "#e0e4e8",
        "fill-extrusion-height": ["get", "render_height"],
        "fill-extrusion-base": ["get", "render_min_height"],
        "fill-extrusion-opacity": 0.8
      }
    },
    {
      "id": "housenumber",
      "source": "moscow",
      "source-layer": "housenumber",
      "type": "symbol",
      "minzoom": 14,
      "layout": {
        "text-field": ["get", "housenumber"],
        "text-font": ["Open Sans Regular"],
        "text-size": 10,
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#888888",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "road-labels",
      "source": "moscow",
      "source-layer": "transportation_name",
      "type": "symbol",
      "minzoom": 10,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 9, 14, 12],
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#777777",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-labels",
      "source": "moscow",
      "source-layer": "place",
      "type": "symbol",
      "minzoom": 5,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 10, 10, 16, 14, 24],
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}
