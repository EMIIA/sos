{
  "version": 8,
  "name": "Moscow Full Offline",
  "sources": {
    "moscow": {
      "type": "vector",
      "tiles": ["https://map.emiia.keenetic.pro/tiles/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "glyphs": "https://map.emiia.keenetic.pro/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f9fa"
      }
    },
    {
      "id": "landcover",
      "source": "moscow",
      "source-layer": "landcover",
      "type": "fill",
      "filter": ["in", "class", "wood", "grass"],
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "wood", "#edeef0",
          "grass", "#e9ecf2",
          "#f8f9fa"
        ],
        "fill-opacity": 0.7
      }
    },
    {
      "id": "water",
      "source": "moscow",
      "source-layer": "water",
      "type": "fill",
      "paint": {
        "fill-color": "#e8ebee"
      }
    },
    {
      "id": "roads-base",
      "source": "moscow",
      "source-layer": "transportation",
      "type": "line",
      "minzoom": 4,
      "paint": {
        "line-color": "#f0f2f4",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          4, 0.5,
          14, 6
        ],
        "line-opacity": 0.8
      }
    },
    {
      "id": "roads-class",
      "source": "moscow",
      "source-layer": "transportation",
      "type": "line",
      "minzoom": 4,
      "paint": {
        "line-color": [
          "match",
          ["get", "class"],
          "motorway", "#e0e3e6",
          "primary", "#e8ebee",
          "secondary", "#f0f3f6",
          "#f8f9fa"
        ],
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          4, 0.5,
          14, 4
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "housenumber",
      "source": "moscow",
      "source-layer": "housenumber",
      "type": "symbol",
      "minzoom": 14,
      "layout": {
        "text-field": ["get", "housenumber"],
        "text-font": ["Open Sans Regular"],
        "text-size": 11,
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#3c78d8",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "road-labels",
      "source": "moscow",
      "source-layer": "transportation_name",
      "type": "symbol",
      "minzoom": 10,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Regular"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 9,
          14, 12
        ],
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#3c78d8",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-labels",
      "source": "moscow",
      "source-layer": "place",
      "type": "symbol",
      "minzoom": 5,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Bold"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          3, 10,
          5, 16,
          10, 24
        ],
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#a4c2f4",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    }
  ]
}
